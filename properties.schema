{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required": false,
  "globals": {
    "openButtonText": {
      "type": "string",
      "required": true,
      "default": "open hint button",
      "inputType": "Text",
      "validators": [],
      "translatable": true
    },
    "closeButtonText": {
      "type": "string",
      "required": true,
      "default": "close hint button",
      "inputType": "Text",
      "validators": [],
      "translatable": true
    }
  },
  "properties": {
    "pluginLocations": {
      "type": "object",
      "required": true,
      "properties": {
        "config": {
          "type": "object"
        },
        "course": {
          "type": "object"
        },
        "contentobject": {
          "type": "object"
        },
        "article": {
          "type": "object"
        },
        "block": {
          "type": "object"
        },
        "component": {
          "type": "object",
          "properties": {
            "_hint": {
              "type": "array",
              "required": false,
              "title": "Hint item(s)",
              "items": {
                "type": "object",
                "required": true,
                "title": "Items",
                "properties": {
                  "title": {
                    "type": "string",
                    "required": false,
                    "title": "Title",
                    "inputType": "Text",
                    "validators": []
                  },
                  "body": {
                    "type": "string",
                    "required": true,
                    "title": "Body",
                    "inputType": "Text",
                    "validators": []
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}