<div class="hint__inner js-hint-inner">

	<button class="btn-icon hint__btn js-hint-btn-toggle" aria-label="{{_globals._extensions._hint.openButtonText}}">
		<div class="icon"></div>
	</button>

	<div class="hint__widget js-hint-widget" role="region"
		aria-label="{{_globals._accessibility._ariaLabels.feedbackPopUp}}">

		{{#each _hint}}
		<div class="hint__item item-{{@index}}">
			<div class="hint__item-inner">

				{{#if title}}
				<div class="hint__item-title">
					<div class="hint__item-title-inner">
						{{{title}}}
					</div>
				</div>
				{{/if}}

				{{#if body}}
				<div class="hint__item-body">
					<div class="hint__item-body-inner">
						{{{a11y_text body}}}
					</div>
				</div>
				{{/if}}

			</div>
		</div>
		{{/each}}

	</div>

</div>